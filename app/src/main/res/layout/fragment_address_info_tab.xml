<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.udacity.capstone.fragment.AddressInfoTabFragment"
    android:orientation="vertical"
    android:id="@+id/main_view">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/label_addressline1"
                android:text="@string/address1_label"
                android:layout_marginStart="@dimen/marginLargeLeftAndRight"
                android:layout_marginEnd="@dimen/marginLargeLeftAndRight"
                android:layout_marginTop="110dp"
                style="@style/TextMain"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txt_addressline1"
                android:layout_marginStart="@dimen/marginLargeLeftAndRight"
                android:layout_marginEnd="@dimen/marginLargeLeftAndRight"
                android:imeOptions="actionNext"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/label_addressline2"
                android:text="@string/address2_label"
                android:layout_marginStart="@dimen/marginLargeLeftAndRight"
                android:layout_marginEnd="@dimen/marginLargeLeftAndRight"
                style="@style/TextMain"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txt_addressline2"
                android:layout_marginStart="@dimen/marginLargeLeftAndRight"
                android:layout_marginEnd="@dimen/marginLargeLeftAndRight"
                android:imeOptions="actionNext"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/label_city"
                android:text="@string/city_label"
                android:layout_marginStart="@dimen/marginLargeLeftAndRight"
                android:layout_marginEnd="@dimen/marginLargeLeftAndRight"
                style="@style/TextMain"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txt_city"
                android:layout_marginStart="@dimen/marginLargeLeftAndRight"
                android:layout_marginEnd="@dimen/marginLargeLeftAndRight"
                android:imeOptions="actionNext"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/label_state"
                android:text="@string/state_label"
                android:layout_marginStart="@dimen/marginLargeLeftAndRight"
                android:layout_marginEnd="@dimen/marginLargeLeftAndRight"
                style="@style/TextMain"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txt_state"
                android:layout_marginStart="@dimen/marginLargeLeftAndRight"
                android:layout_marginEnd="@dimen/marginLargeLeftAndRight"
                android:imeOptions="actionNext"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/label_pincode"
                android:text="@string/pincode_label"
                android:layout_marginStart="@dimen/marginLargeLeftAndRight"
                android:layout_marginEnd="@dimen/marginLargeLeftAndRight"
                style="@style/TextMain"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txt_pincode"
                android:layout_marginStart="@dimen/marginLargeLeftAndRight"
                android:layout_marginEnd="@dimen/marginLargeLeftAndRight"
                android:imeOptions="actionNext"
                android:inputType="phone"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/label_contact"
                android:text="@string/contact_label"
                android:layout_marginStart="@dimen/marginLargeLeftAndRight"
                android:layout_marginEnd="@dimen/marginLargeLeftAndRight"
                style="@style/TextMain"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txt_contact"
                android:layout_marginStart="@dimen/marginLargeLeftAndRight"
                android:layout_marginEnd="@dimen/marginLargeLeftAndRight"
                android:imeOptions="actionNone"
                android:inputType="phone"/>


            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/save_address"
                android:text="@string/save_label"/>

            </LinearLayout>
    </ScrollView>
</LinearLayout>
