<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowContentTransitions" tools:targetApi="lollipop">true</item>
    </style>

    <style name="EditTextMain" parent="@android:style/Widget.Holo.Light.EditText">
        <item name="android:textColor">@color/editText</item>
        <item name="android:textColorHint">@color/editTextHint</item>
        <item name="android:textSize">@dimen/textSizeMedium</item>
        <item name="android:textColorHighlight">@color/editTextAutoComplete</item>
    </style>

    <style name="TextMain" parent="@android:style/TextAppearance">
        <item name="android:textSize">@dimen/textSizeMain</item>
        <item name="android:textColor">@color/textMain</item>
    </style>

    <style name="DetailViewText" parent="TextMain">
        <item name="android:layout_marginTop">@dimen/marginMainTopAndBottom</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CardViewBG" parent="AppTheme">
        <item name="android:background">@color/bgColor</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
